@page
@model WorkTimeTable.Pages.ContractsModel
@{
    ViewBag.Title = "Договоры";
}

<div class="container-fluid pt-2">

    <div class="row">

        <div class="col-1">

            <div class="d-flex flex-column gap-2 w-100">

                @await Html.PartialAsync("./Shared/_ViewAddDeleteButtons.cshtml")

            </div>

        </div>

        <div class="col-11">

            <table class="table table-striped table-bordered align-middle">
                <tr>
                    <th><input class="form-check-input" type="checkbox" id="CheckAll"/></th>
                    <th>ID</th>
                    <th>Название</th>
                </tr>
                @foreach (var contract in Model.Contracts)
                {
                    <tr>
                        <td>
                            <input class="form-check-input" type="checkbox" name="AreChecked" value="@contract.Id" form="RemoveForm" />
                        </td>
                        <td>@contract.Id</td>
                        <td>@contract.Name</td>
                        <td>
                            <form method="post" asp-page-handler="Edit">
                                <input type="hidden" name="id" value="@contract.Id" />
                                <input class="form-control" name="name" value="@contract.Name" /> @* проверка на null *@
                                <button class="btn btn-outline-secondary" type="submit">Изменить</button>
                            </form>
                        </td>
                    </tr>
                }
            </table>

        </div>

    </div>

</div>

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" asp-page-handler="Add">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Добавление</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">

                    <div class="row">
                        Новый договор
                    </div>

                    <div class="row">
                        <div class="col">
                            <input class="form-control" name="name" placeholder="Номер договора" />
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Закрыть</button>              
                    <button class="btn btn-primary" type="submit">Сохранить</button>
                </div>

            </form>

        </div>
    </div>
</div>
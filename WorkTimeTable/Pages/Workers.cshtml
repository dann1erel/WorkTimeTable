@page
@model WorkTimeTable.Pages.WorkersModel
@{
}

<text>Здесь будут работники</text>
<a asp-page="/Index">Домой</a>
<table>
    <tr><th>ID</th><th>ФИО</th><th>Должность</th><th>Отдел</th></tr>
    @foreach (var worker in Model.Workers)
    {
        <tr>
            <td>@worker.Id</td>
            <td>@worker.Name</td>
            <td>@worker.Position</td>
            <td>@worker.Department?.Name</td>
            <td>
                <form method="post" asp-page-handler="Edit">
                    <input type="hidden" name="id" value="@worker.Id"/>
                    <input name="name" value="@worker.Name" />
                    <input name="position" value="@worker.Position" />
                    <select name="departmentId" asp-items="Model.Options">
                        <option value="@null">Нет отдела</option>
                    </select>
                    <input type="submit" value="Изменить" />
                </form>
            </td>
            <td>
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="id" value="@worker.Id" />
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>

<text>Вставить</text>

<form method="post" asp-page-handler="Add">
    <p>
        <input name="name" placeholder="имя"/>
        <input name="position" placeholder="должность" />
        <select name="departmentId" asp-items="Model.Options">
            <option value="@null">Нет Отдела</option>
        </select>
    </p>
    <input type="submit" value="Отправить" />
</form>


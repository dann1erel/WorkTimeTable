@page
@model WorkTimeTable.Pages.WorkersModel
@{
    ViewBag.Title = "Работники";
}

<div class="container-fluid pt-2">

    <div class="row">

        <div class="col-1">

            <div class="d-flex flex-column gap-2 w-100">

                @await Html.PartialAsync("./Shared/_ViewAddDeleteButtons.cshtml")

            </div>

        </div>

        <div class="col-11">

            <table class="table table-striped table-bordered align-middle">
                <tr>
                    <th><input class="form-check-input" type="checkbox" id="CheckAll" /></th>
                    <th>ID</th>
                    <th>
                        ФИО
                        <a asp-page="./Workers" asp-route-sortOrder="@Model.NameSort" asp-route-currentNameFilter="@Model.NameFilter">
                            *
                        </a>
                        <a asp-page="./Workers" asp-route-sortOrder="@null">
                            +
                        </a>

                        <form method="get" asp-page="./Workers">
                            <input class="form-control" type="text" name="searchNameString" value="@Model.NameFilter" />
                            <button type="submit" class="btn btn-light">Поиск</button>
                        </form>
                    </th>
                    <th>
                        Должность
                        <a asp-page="./Workers" asp-route-sortOrder="@Model.PositionSort" asp-route-currentNameFilter="@Model.PositionFilter">
                            *
                        </a>
                        <a asp-page="./Workers" asp-route-sortOrder="@null">
                            +
                        </a>

                        <form method="get" asp-page="./Workers">
                            <input class="form-control" type="text" name="searchPositionString" value="@Model.PositionFilter" />
                            <button type="submit" class="btn btn-light">Поиск</button>
                        </form>
                    </th>
                    <th>
                        Отдел
                        <a asp-page="./Workers" asp-route-sortOrder="@Model.DepartmentSort" asp-route-currentNameFilter="@Model.DepartmentFilter">
                            *
                        </a>
                        <a asp-page="./Workers" asp-route-sortOrder="@null">
                            +
                        </a>

                        <form method="get" asp-page="./Workers">
                            <input class="form-control" type="text" name="searchDepartmentString" value="@Model.DepartmentFilter" />
                            <button type="submit" class="btn btn-light">Поиск</button>
                        </form>
                    </th>
                </tr>
                @foreach (var worker in Model.Workers)
                {
                    string departmentName = worker.Department?.Name ?? "Нет отдела";
                    <tr>
                        <td>
                            <input class="form-check-input" type="checkbox" name=AreChecked value="@worker.Id" form="RemoveForm" />
                        </td>
                        <td>@worker.Id</td>
                        <td>@worker.Name</td>
                        <td>@worker.Position</td>
                        <td>@departmentName</td>
                        <td>
                            <form method="post" asp-page-handler="Edit">
                                <input type="hidden" name="id" value="@worker.Id" />
                                <input class="form-control" name="name" value="@worker.Name" required/> @* проверка на null *@
                                <input class="form-control" name="position" value="@worker.Position" required/> @* проверка на null *@
                                <select class="form-select" name="departmentId"
                                        asp-items="@(new SelectList(Model.Options, "Value", "Text", worker.DepartmentId?.ToString()))">
                                    <option value="">Нет отдела</option>
                                </select>
                                <button class="btn btn-outline-secondary" type="submit">Изменить</button>
                            </form>
                        </td>
                    </tr>
                }
            </table>

            @{
                var prevDisabled = !Model.Workers.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.Workers.HasNextPage ? "disabled" : "";
            }

            <a asp-page="./Workers"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Workers.PageIndex - 1)"
               asp-route-currentNameFilter="@Model.NameFilter"
               asp-route-currentPositionFilter="@Model.PositionFilter"
               asp-route-currentDepartmentFilter="@Model.DepartmentFilter"
               class="btn btn-secondary @prevDisabled">
                Назад
            </a>
            <a asp-page="./Workers"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Workers.PageIndex + 1)"
               asp-route-currentNameFilter="@Model.NameFilter"
               asp-route-currentPositionFilter="@Model.PositionFilter"
               asp-route-currentDepartmentFilter="@Model.DepartmentFilter"
               class="btn btn-secondary @nextDisabled">
                Вперёд
            </a>

        </div>

    </div>

</div>

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" asp-page-handler="Add">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Добавление</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">

                    <div class="row">
                        Новый работник:
                    </div>

                    <div class="row">
                        <div class="col">
                            <input class="form-control" name="name" placeholder="Имя" required/> @* проверка на null *@
                        </div>
                        <div class="col">
                            <input class="form-control" name="position" placeholder="Должность" required/> @* проверка на null *@
                        </div>
                        <div class="col">
                            <select class="form-select" name="departmentId" asp-items="Model.Options">
                                <option>Нет Отдела</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Закрыть</button>
                    <button class="btn btn-primary" type="submit">Сохранить</button>
                </div>

            </form>

        </div>
    </div>
</div>

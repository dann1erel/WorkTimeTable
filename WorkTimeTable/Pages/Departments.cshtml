@page
@model WorkTimeTable.Pages.DepartmentsModel
@{
    ViewBag.Title = "Отделы";
}

<div class="container-fluid pt-2">

    <div class="row">

        <div class="col-1">

            <div class="d-flex flex-column gap-2 w-100">

                @await Html.PartialAsync("./Shared/_ViewAddDeleteButtons.cshtml")

            </div>

        </div>

        <div class="col-11">

            <table class="table table-striped table-bordered align-middle">
                <tr>
                    <th><input class="form-check-input" type="checkbox" id="CheckAll" /></th>
                    <th>ID</th>
                    <th>
                        Название
                        <a asp-page="./Departments" asp-route-sortOrder="@Model.NameSort" asp-route-currentNameFilter="@Model.NameFilter">
                            *
                        </a>
                        <a asp-page="./Departments" asp-route-sortOrder="@null">
                            +
                        </a>

                        <form method="get" asp-page="./Departments">
                            <input class="form-control" type="text" name="searchNameString" value="@Model.NameFilter" />
                            <button type="submit" class="btn btn-light">Поиск</button>
                        </form>
                    </th>
                    <th>
                        Руководитель
                        <a asp-page="./Departments" asp-route-sortOrder="@Model.LeaderSort">
                            *
                        </a>
                        <a asp-page="./Departments" asp-route-sortOrder="@null">
                            +
                        </a>

                        <form method="get" asp-page="./Departments">
                            <input class="form-control" type="text" name="searchLeaderString" value="@Model.LeaderFilter" />
                            <button type="submit" class="btn btn-light">Поиск</button>
                        </form>
                    </th>
                </tr>
                @foreach (var department in Model.Departments)
                {
                    string departmentName = department.Leader?.Name ?? "Нет руководителя";
                    <tr>
                        <td>
                            <input class="form-check-input" type="checkbox" name=AreChecked value="@department.Id" form="RemoveForm" />
                        </td>
                        <td>@department.Id</td>
                        <td>@department.Name</td>
                        <td>@departmentName</td>
                        <td>
                            <form method="post" asp-page-handler="Edit">
                                <input class="form-control" type="hidden" name="id" value="@department.Id" />
                                <input class="form-control" name="name" value="@department.Name" required/> @* проверка на null *@
                                <select class="form-select" name="leaderId" asp-items="@(new SelectList(Model.Options, "Value", "Text", department.LeaderId?.ToString()))">
                                    <option selected>Нет Руководителя</option>
                                </select>
                                <button type="submit" class="btn btn-light">Изменить</button>
                            </form>
                        </td>
                    </tr>
                }
            </table>

            @{
                var prevDisabled = !Model.Departments.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.Departments.HasNextPage ? "disabled" : "";
            }

            <a asp-page="./Departments"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Departments.PageIndex - 1)"
               asp-route-currentNameFilter="@Model.NameFilter"
               asp-route-currentLeaderFilter="@Model.LeaderFilter"
               class="btn btn-secondary @prevDisabled">
                Назад
            </a>
            <a asp-page="./Departments"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Departments.PageIndex + 1)"
               asp-route-currentNameFilter="@Model.NameFilter"
               asp-route-currentLeaderFilter="@Model.LeaderFilter"
               class="btn btn-secondary @nextDisabled">
                Вперёд
            </a>


        </div>

    </div>

</div>

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" asp-page-handler="Add">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Добавление</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">

                    <div class="row">
                        Новый отдел:
                    </div>

                    <div class="row">
                        <div class="col">
                            <input class="form-control" name="name" placeholder="Название" required/> @* проверка на null *@
                        </div>
                        <div class="col">
                            <select class="form-select" name="leaderId" asp-items="Model.Options">
                                <option>Нет Руководителя</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Закрыть</button>
                    <button class="btn btn-primary" type="submit">Сохранить</button>
                </div>

            </form>

        </div>
    </div>
</div>